{
  "extends": "astro/tsconfigs/strict",
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ],
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  }
}
