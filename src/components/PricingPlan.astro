---
import Button from '@components/Button.astro';
import type {PricingPlanItem} from '@lib/models';
import Status from 'src/components/Status.astro';

const {title, price, isReady, benefits, btn} = Astro.props as PricingPlanItem;

const readyText = 'Ready to use';
---

<div
  class=`flex flex-col flex-1 justify-between p-[32px] rounded-[16px] bg-bg-tertiary`
>
  <div class="flex flex-col">
    <Status isReady={isReady} readyText={readyText} />

    <div class="flex justify-between mt-[16px]">
      <p class="text-color-main text-h4 leading-[32px] font-bold">
        {title}
      </p>

      <p class="text-color-gray-50 text-h4 leading-[32px] font-bold">
        {price}
      </p>
    </div>

    <ul class="flex flex-col list-disc pl-[20px] mt-[24px]">
      {
        benefits.map(benefit => (
          <li class="text-color-description text-h7 leading-[20px] font-medium	">
            {benefit}
          </li>
        ))
      }
    </ul>
  </div>

  {btn && <Button className="w-full" text={btn.text} />}
</div>
