---
import Button from '@components/Button.astro';
import type {PricingPlanItem} from '@lib/models';

const {title, price, benefits, btn} = Astro.props as PricingPlanItem;
---

<div
  class=`flex flex-col flex-1 p-[48px] bg-bg-price rounded-[12px] justify-between`
>
  <div class="flex flex-col">
    <p class="text-text-dark text-h6 font-medium">
      {title}
    </p>

    <p class="text-text-dark text-h2 mt-[12px] font-semibold">
      {price}
    </p>

    <ul class="flex flex-col list-disc pl-[20px] mt-[32px]">
      {
        benefits.map(benefit => (
          <li class="text-text-description text-h5 mt-[12px] font-medium	">
            {benefit}
          </li>
        ))
      }
    </ul>
  </div>

  <Button
    className="w-full mt-[32px]"
    text={btn.text}
    disabled={btn.disabled}
  />
</div>
