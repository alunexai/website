---
import UseCase from '@components/UseCase.astro';
import {USE_CASES} from '@lib/constants';
import type {UseCaseItem} from '@lib/models';
import answersCase from '@assets/img/answers-case.png';
import presalesCase from '@assets/img/presales-case.png';
import proposalsCase from '@assets/img/proposals-case.png';

const title = 'Use Cases';
const subTitle =
  'Turn fragmented data into powerful new insights and efficiencies';

const useCases: UseCaseItem[] = [
  {
    title: 'Get Answers Quickly',
    description:
      'Enable conversations across your fragmented documents, spreadsheets, and photos to answer questions quickly and uncover key insights that might have otherwise been missed.',
    isReady: true,
    btn: {text: 'Try it out!'},
    imgSrc: answersCase,
    position: 'left',
    isLast: false,
  },
  {
    title: 'Automate Pre-sales and Customer Support',
    description:
      'Automate time consuming pre-sales and customer support activities with an AI Agent specially trained on relevant data that you chose and fully control.',
    isReady: false,
    btn: undefined,
    imgSrc: presalesCase,
    position: 'right',
    isLast: false,
  },
  {
    title: 'Create Highly Relevant Customer Proposals',
    description:
      'Use photos and insights gained from your documents and files to create highly relevant AI-generated material for potential customers, in just seconds.',
    isReady: false,
    btn: undefined,
    imgSrc: proposalsCase,
    position: 'left',
    isLast: true,
  },
];
---

<div
  id={USE_CASES}
  class="flex flex-col justify-center items-center sm:px-[16px] pt-[110px]"
>
  <h1
    class="text-color-main text-h4 leading-[32px] lg:text-h2 lg:leading-[48px] font-bold"
  >
    {title}
  </h1>

  <p
    class="text-color-subtitle text-center md:text-h7 lg:text-h5 md:leading-[20px] lg:leading-[25px] mt-[24px]"
  >
    {subTitle}
  </p>

  <div class="flex flex-col lg:w-[800px] md:mt-[48px] lg:mt-[64px]">
    {useCases.map(useCase => <UseCase {...useCase} />)}
  </div>
</div>
