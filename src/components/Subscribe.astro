---
import Button from 'src/components/Button.astro';
import Input from 'src/components/Input.astro';

const title = 'Get our latest product updates';
const subTitle = 'Unsubscribe any time';
const inputPlaceholder = 'Enter your mail here';
const subscribeBtnText = 'Get updates';
---

<div class="flex justify-center md:px-[16px] md:py-[40px] lg:py-[80px]">
  <div class="gradient-border w-full max-w-[1000px] h-[400px]">
    <div
      class="gradient-border-content h-full flex flex-col items-center justify-center"
    >
      <p class="text-color-main text-h4 font-bold leading-[32px]">
        {title}
      </p>

      <p
        class="text-color-description text-h6 font-medium leading-[20px] mt-[8px]"
      >
        {subTitle}
      </p>

      <div class="flex flex-col w-[400px] mt-[32px]">
        <Input type="email" placeholder={inputPlaceholder} className="w-full" />

        <Button
          className="mt-[16px] w-full"
          size="md"
          text={subscribeBtnText}
        />
      </div>
    </div>
  </div>
</div>

<style>
  .gradient-border {
    position: relative;
    display: inline-block;
    border-radius: 16px;
  }

  .gradient-border::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(100deg, #dfffe6, #7db9ff);
    z-index: -1;
    border-radius: 16px;
  }

  .gradient-border-content {
    position: relative;
    background: #1a1a1a;
    border-radius: 16px;
  }
</style>
