---
import {getImgSrc} from '@lib/helpers';
import Button from '@components/Button.astro';

const title =
  'Turn fragmented data into powerful new insights and efficiencies ';
const subTitle = 'Improved margins for SMBs are just a chat away';
const btnText = 'Get Started';

const chat = (await getImgSrc('chat')).default;
---

<div
  class="flex flex-col w-2/3 mx-auto items-center text-center mt-[100px] mb-[40px]"
>
  <h1 class="text-text-main text-h1 px-[75px] leading-[77px]">
    {title}
  </h1>

  <p class="text-text-main text-h3 mt-[60px]">
    {subTitle}
  </p>

  <img src={chat.src} alt="AI Chat" class="mt-[60px]" />

  <Button text={btnText} className="mt-[40px]" />
</div>
