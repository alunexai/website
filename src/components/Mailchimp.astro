---
import Input from 'src/components/Input.astro';
---

<div id="mc_embed_shell">
  <link
    href="//cdn-images.mailchimp.com/embedcode/classic-061523.css"
    rel="stylesheet"
    type="text/css"
  />
  <style type="text/css"></style>
  <div id="mc_embed_signup">
    <form
      action="https://alunex.us18.list-manage.com/subscribe/post?u=18ec0721740199c053fa96a06&id=5736420d82&f_id=00322ee1f0"
      method="post"
      id="mc-embedded-subscribe-form"
      name="mc-embedded-subscribe-form"
      class="validate"
      target="_blank"
    >
      <div
        id="mc_embed_signup_scroll"
        class="flex flex-col items-center gap-[16px]"
      >
        <div class="mc-field-group !flex !flex-col !justify-center !w-full">
          <Input
            id="mce-EMAIL"
            required
            label="Work Email Address"
            type="email"
            name="EMAIL"
            className="required email"
          />
        </div>
        <div class="mc-field-group !flex !flex-col !justify-center !w-full">
          <Input
            id="mce-FNAME"
            label="First Name"
            type="text"
            name="FNAME"
            className="text"
          />
        </div>
        <div class="mc-field-group !flex !flex-col !justify-center !w-full">
          <Input
            id="mce-LNAME"
            label="Last Name"
            type="text"
            name="LNAME"
            className="text"
          />
        </div>
        <div id="mce-responses" class="clear foot flex w-full justify-center">
          <div class="response" id="mce-error-response" style="display: none;">
          </div>
          <div
            class="response text-h5 font-medium text-color-success text-center !p-0 !m-0"
            id="mce-success-response"
            style="display: none;"
          >
          </div>
        </div>
        <div aria-hidden="true" style="position: absolute; left: -5000px;">
          /* real people should not fill this in and expect good things - do not
          remove this or risk form bot signups */
          <input
            type="text"
            name="b_18ec0721740199c053fa96a06_5736420d82"
            tabindex="-1"
            value=""
          />
        </div>
        <div class="optionalParent !w-full">
          <div class="clear foot !w-full !flex justify-center">
            <input
              type="submit"
              name="subscribe"
              id="mc-embedded-subscribe"
              class="button !mt-[16px] !mx-[8px] w-full h-[40px] px-[12px] text-h6 font-bold rounded-[16px] bg-btn-main-normal-bg text-btn-main-color hover:bg-btn-main-hover-bg active:bg-btn-main-active-bg"
              value="Subscribe"
            />
          </div>
        </div>
      </div>
    </form>
  </div>
  <script
    type="text/javascript"
    src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"></script>
  <script type="text/javascript">
    (function ($) {
      window.fnames = new Array();
      window.ftypes = new Array();
      fnames[0] = 'EMAIL';
      ftypes[0] = 'email';
      fnames[1] = 'FNAME';
      ftypes[1] = 'text';
      fnames[2] = 'LNAME';
      ftypes[2] = 'text';
      fnames[3] = 'ADDRESS';
      ftypes[3] = 'address';
      fnames[4] = 'PHONE';
      ftypes[4] = 'phone';
    })(jQuery);
    var $mcj = jQuery.noConflict(true);

    var target = document.getElementById('mce-success-response');

    var observer = new MutationObserver(function (mutations) {
      mutations.forEach(function (mutation) {
        if (target.innerHTML === 'Thank you for subscribing!') {
          target.innerHTML =
            '<svg width="25" height="24" viewBox="0 0 25 24" fill="none" xmlns="http://www.w3.org/2000/svg"><circle cx="12.5" cy="12" r="12" fill="#52E078"/><path d="M6.5 11L11.5 16L18.5 9" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>' +
            '<p id="success-text">Thanks for subscribing!</p>';

          target.style.display = 'flex';
          target.style.justifyContent = 'center';
          target.style.alignItems = 'center';
          target.style.gap = '8px';

          const successText = document.getElementById('success-text');
          if (window.innerWidth < 400) {
            successText.style.fontSize = '16px';
          } else {
            successText.style.fontSize = '18px';
          }

          document
            .querySelectorAll('.mc-field-group, .optionalParent')
            .forEach(function (el) {
              el.classList.add('hidden');
            });
        }
      });
    });

    var config = {attributes: true, childList: true, characterData: true};

    observer.observe(target, config);
  </script>
</div>

<style>
  label {
    color: #fff;
  }

  .hidden {
    display: none;
  }

  @media (max-width: 400px) {
    .success {
      font-size: 16px;
    }
  }
</style>
